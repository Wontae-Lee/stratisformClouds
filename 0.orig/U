FoamFile
{
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    "(warmPlace1|warmPlace2|coldPlace)"
    {
        type            noSlip;
    }
    inlet
    {
        type            fixedValue;
        value           uniform (0 0 20);
    }
    outlet
    {
        type            zeroGradient;
    }
    allBoundaries
    {
       type             fixedValue;
       value            $internalField;
    }
    atmosphere
    {
        type            zeroGradient;
    }

}


